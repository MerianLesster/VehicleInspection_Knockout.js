@{
    ViewBag.Title = "Vehicle Inspection";
}

<script src="~/Scripts/knockout-3.5.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/KnockoutModels/VehicleViewModel.js"></script>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 font-weight-bold">Vehicle Inspection</h1>
        <hr class="my-4" />
        <p class="lead">
            Vehicle Inspection Web Application.
        </p>
    </div>
</div>

<div data-bind="with: showVehicleViewModel">
    <div class="row">
        <div class="panel-body" data-bind="hidden: LoginSuccess">
            @Html.Partial("Login")
        </div>
    </div>

    <div class="row" data-bind="visible: LoginSuccess">
        <div style="text-align: right; padding-right: 18px">
            Welcome<h4 data-bind="text: Username" style="font-weight: bold"></h4>
        </div>
        <div class="panel-body">
            @Html.Partial("Vehicle")
        </div>
    </div>

    <div class="row" data-bind="if: InspectionReady">
        <div class="panel-body">
            @Html.Partial("Inspection")
        </div>
        <div style="float: right; padding-right: 18px">
            <input type="button" class="btn btn-success" value="View Inspection Summary" data-bind="click: viewInspecSummary" />
        </div>
    </div>

    <div class="row" data-bind="if: ShowSummary">
        <div class="panel-body">
            @Html.Partial("InspectionSummary")
        </div>
    </div>
</div>