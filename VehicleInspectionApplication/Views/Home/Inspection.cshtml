<div class="panel panel-default">
    <div class="panel-heading">Inspections</div>
    <div class="panel-body">
        <div class="accordion" id="accordionExample">
            <div class="panel panel-default" data-bind="foreach: { data: CheckpointGroup, as: 'group' }">
                <div class="panel-heading" id="headingTwo" style="background-color: beige;">
                    <h5 style="margin: 0px;">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#" data-bind="attr: {'data-target': '#group' + $index() }" aria-expanded="false" aria-controls="collapseTwo">
                            <span data-bind="text: group.Name"></span>
                        </button>
                    </h5>
                </div>
                <div data-bind="attr: { id: 'group' + $index() }" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="panel-body">
                        <hr />
                        <form class="form-inline" style="padding: 20px; padding-top: 0px" data-bind="foreach: { data: group.Checkpoints, as: 'checkpoints' }">
                            <div data-bind="foreach: { data: checkpoints, as: 'checkpoint' }">
                                <p data-bind="text: checkpoint.Name"></p>
                                <div class="form-group mb-2">
                                    <input type="text" class="form-control" data-bind="attr: { id: 'comment' + checkpoint.Id }" placeholder="Comment here" value="">
                                </div>
                                <div class="form-group">
                                    <select class="form-control" data-bind="options: $parents[2].StatusArr, optionsCaption: 'Select status', attr: { id: 'status' + checkpoint.Id }"></select>
                                </div>
                                <input style="float: right" type="button" class="btn btn-primary" value="Add Inspection Checkpoint" data-bind="click: $parents[2].addInspecCheckpoint.bind(checkpoint.Id), attr:{'CpId': checkpoint.Id,  id: 'btn' + checkpoint.Id }" />
                                <hr />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
