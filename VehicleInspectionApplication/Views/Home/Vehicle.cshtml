<div class="panel panel-default">
    <div class="panel-heading">Add Vehicle</div>
    <div class="panel-body">
        <form role="form">
            <div class="form-group col-md-4">
                <label for="make">Make:</label>
                <select id="make" class="form-control" data-bind="options: makes, optionsText: 'Name', value: Make, optionsCaption: 'Please select a make', disable: InspectionReady">
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="model">Model:</label>
                <select id="model" class="form-control" data-bind="options: models, optionsText: 'Name', value: Model, optionsCaption: 'Please select a model', disable: !Make() || InspectionReady">
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="type">Type:</label>
                <input id="type" type="text" class="form-control" placeholder="Vehicle type" disabled data-bind="value: Type" />
            </div>

            <div style="float: right; padding-right: 18px" data-bind="hidden: InspectionReady">
                <input type="button" id="btnCreateInspec" class="btn btn-primary" value="Create Inspection" data-bind="click: addVehicle" />
            </div>

        </form>
    </div>
</div>